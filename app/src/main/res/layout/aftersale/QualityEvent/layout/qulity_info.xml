<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Black"
    tools:context="com.zhengyuan.emoutproductaftersale.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/widget_contact_title_bar" />
    </LinearLayout>
<!--头部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        style="@style/my_edittext_style_black">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="故障处理反馈类型"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/twoCars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:text="两车互倒处理故障登记"
                android:singleLine="true"

                android:editable="false"/>
            <EditText
                android:id="@+id/CompanyMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:text="利用公司资产处理故障登记"
                android:singleLine="true"
                android:editable="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <EditText
            android:id="@+id/OtherMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:text="利用段方资产处理故障登记"
            android:singleLine="true"
            android:editable="false"/>
        <EditText
            android:id="@+id/NoExchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:text="未更换配件处理故障登记"
            android:singleLine="true"
            android:editable="false"/>
        </LinearLayout>
    </LinearLayout>
    <Spinner
        android:id="@+id/companyNameSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_selector"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:spinnerMode="dialog"></Spinner>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/SercherBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/bg_edittext_selector"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="21dp"
            android:paddingLeft="21dp"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:hint="请输入车型车号，以空格隔开"/>
        <ImageView
            android:id="@+id/SercherInfo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/search_blue128"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#CCCCCC" />
    <!--

-->

    <!--展示数据-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="质量信息"
        android:textColor="#000000"
        android:textSize="13sp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/emptyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无数据！"
        android:textColor="@color/gray"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:id="@+id/qulityInfoListLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
        </LinearLayout>
    </ScrollView>
</LinearLayout>