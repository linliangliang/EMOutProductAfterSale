<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:id="@+id/QIIRelativeLayout">

    <LinearLayout
        android:id="@+id/ZZXX_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/my_edittext_style_blue2">
            <CheckBox
                android:id="@+id/GX_CHECK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="勾选"
                android:textColor="@color/gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/TextColorUnable"
                android:textSize="13sp"
                android:text="质量信息号:"/>
            <EditText
                android:id="@+id/ZZXXH_Edit"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:singleLine="true"
                android:textSize="11sp"
                android:editable="false"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ZLXXLX_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ZZXX_Layout"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/TextColorUnable"
                android:textSize="13sp"
                android:text="质量信息类型:"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/ZZXXLX_Edit"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:singleLine="true"
                android:textSize="11sp"
                android:editable="false"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/CXCH_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ZLXXLX_Layout"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <TextView
                android:id="@+id/CX_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/TextColorUnable"
                android:layout_marginRight="7sp"
                android:textSize="13sp"
                android:text="车型车号:"/>
            <EditText
                android:id="@+id/CXCH_Edit"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:singleLine="true"
                android:textSize="11sp"
                android:editable="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/CLZT_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/TextColorUnable"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:text="处理状态:"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/CLZT_Edit"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:singleLine="true"
                android:textSize="11sp"
                android:editable="false"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/QulityDescribe_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CXCH_Layout"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
<!--            <Button
                android:id="@+id/WTMS_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/TextColorUnable"
                android:textSize="13sp"
                android:text="问题描述"
                android:layout_weight="1"
                android:background="@drawable/submitcarinfo"/>-->
            <EditText
                android:id="@+id/WTMS_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:maxLines="3"
                android:gravity="top|left"
                style="@style/my_edittext_style_blue2"
                android:text="问题描述"
                android:textColor="@color/TextColorUnable"
                android:editable="false"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>