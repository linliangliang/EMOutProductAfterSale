<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/widget_contact_title_bar" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <Button
                    android:id="@+id/CLZLSJ"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/submitstyle"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:text="处理质量事件"
                    />
                <Button
                    android:id="@+id/Student"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/submitstyle"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:text="开会  培训  学习" />
                <Button
                    android:id="@+id/WaitAndRun"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/submitstyle"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:text="待命  移动" />
                <Button
                    android:id="@+id/LeaveAndResel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/submitstyle"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:text="请假  休息" />
                <Button
                    android:id="@+id/DJZL"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/submitstyle"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:text="单据整理" />
                <Button
                    android:id="@+id/MetailBack2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/submitstyle"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:text="物料返回" />

                <Button
                    android:id="@+id/WLWJJG"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/submitstyle"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:text="SS3B网络微机技改" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <Button
                    android:id="@+id/GZcheck"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/submitstyle"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:text="故障检查" />
                <Button
                    android:id="@+id/PublicCheck"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/submitstyle"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:text="普查" />
                <Button
                    android:id="@+id/TCGC"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/submitstyle"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:text="添乘跟车 " />
                <Button
                    android:id="@+id/Process"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/submitstyle"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:text="软件程序升级" />
                <Button
                    android:id="@+id/SercherCar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/submitstyle"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:text="查询故障车" />
                <Button
                    android:id="@+id/MetailAccept2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/submitstyle"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:text="物料接收" />
                <Button
                    android:id="@+id/CMDJZ"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/submitstyle"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:text="CMD加装交换机" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>